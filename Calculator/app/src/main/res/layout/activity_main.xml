<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/C"
                style="@style/Button1"
                android:text="C"
                android:backgroundTint="@color/orange"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/num7"
                style="@style/Button1"
                android:text="7"
                android:backgroundTint="@color/white"
                tools:ignore="TextContrastCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num4"
                android:text="4"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num1"
                android:text="1"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/AC"
                android:text="AC"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Button1"
                android:id="@+id/open"
                android:text="x^2"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num8"
                android:text="8"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num5"
                android:text="5"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num2"
                android:text="2"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num0"
                android:text="0"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Button1"
                android:id="@+id/close"
                android:text="%"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num9"
                android:text="9"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num6"
                android:text="6"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/num3"
                android:text="3"
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/dot"
                android:text="."
                android:backgroundTint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Button1"
                android:id="@+id/div"
                android:text="/"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/mul"
                android:text="*"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/add"
                android:text="+"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/sub"
                android:text="-"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                style="@style/Button1"
                android:id="@+id/equal"
                android:text="="
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
